<%= javascript_include_tag :fckeditor %>

<h1>Config About US</h1>

<% form_for(:setting,:url=>{:controller=>'/admin/home', :action=>'set_about_us'}) do |f| %>
    <%= flash[:notice] %>

    <p>
            <%= f.label :content %><br />
            <%= fckeditor_textarea("setting", "value", :toolbarSet => 'Simple', :width => '650px', :height => '500px') %>
    </p>
    <p>
            <%= f.submit "Update" %>
    </p>
<% end %>