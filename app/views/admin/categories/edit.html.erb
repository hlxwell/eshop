<h1>修改客房分类</h1>

<% form_for(@category,:url=>admin_category_path(@category),:method=>:put) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "客房分类名称" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "更新" %>
  </p>
<% end %>

<%= link_to '显示', admin_category_path(@category) %> |
<%= link_to '后退', admin_categories_path %>
