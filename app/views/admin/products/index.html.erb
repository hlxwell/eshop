<h1>房间类型列表</h1>

<table border='1'>
        <tr>
                <th>价格</th>
                <th>名称</th>
                <th>规格</th>
        </tr>

        <% for product in @products %>
            <tr>
                    <td><%=h product.number %></td>
                    <td><%=h product.name %></td>
                    <td><%=h product.specification %></td>

                    <td><%= link_to '显示', admin_product_path(product) %></td>
                    <td><%= link_to '修改', edit_admin_product_path(product) %></td>
                    <td><%= link_to '删除', admin_product_path(product), :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
        <% end %>
</table>

<br />

