<%= javascript_include_tag :fckeditor %>

<h1>Editing news_topic</h1>

<% form_for(@news_topic,:url=>admin_news_topic_path(@news_topic)) do |f| %>
    <%= f.error_messages %>

    <p>
            <%= f.label :title %><br />
            <%= f.text_field :title %>
    </p>
    <p>
            <%= f.label :body %><br />
            <%= fckeditor_textarea("news_topic", "body", :toolbarSet => 'Simple', :width => '600px', :height => '500px') %>
    </p>
    <p>
            <%= f.submit "Update" %>
    </p>
<% end %>

<%= link_to 'Show', admin_news_topic_path(@news_topic) %> |
<%= link_to 'Back', admin_news_topics_path %>
