<h1>新闻列表</h1>

<table border='1'>
        <tr>
                <th>标题</th>
        </tr>

        <% for news_topic in @news_topics %>
            <tr>
                    <td><%=h news_topic.title %></td>
                    <td><%= link_to '显示', admin_news_topic_path(news_topic) %></td>
                    <td><%= link_to '修改', edit_admin_news_topic_path(news_topic) %></td>
                    <td><%= link_to '删除', admin_news_topic_path(news_topic), :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
        <% end %>
</table>

<br />

<%= link_to '新建新闻', new_admin_news_topic_path %>
