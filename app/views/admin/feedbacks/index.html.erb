<h1>Listing feedbacks</h1>

<table border='1'>
        <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Product</th>
        </tr>

        <% for feedback in @feedbacks %>
            <tr>
                    <td><%=h feedback.name %></td>
                    <td><%=h feedback.email %></td>
                    <td><%=link_to(image_tag(feedback.product.pictures.first.public_filename(:small)),admin_product_path(feedback.product)) if feedback.product%></td>
                    <td><%= link_to 'Show', admin_feedback_path(feedback) %></td>
                    <td><%= link_to 'Edit', edit_admin_feedback_path(feedback) %></td>
                    <td><%= link_to 'Destroy', admin_feedback_path(feedback), :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
        <% end %>
</table>

<br />

<%= link_to 'New feedback', new_admin_feedback_path %>
