<table width="780" border="0" align="center" cellpadding="0" cellspacing="5">
        <tr>
                <td width="200" valign="top">
                        <%=render :partial=>'/shared/menu'%>
                </td>
                <td width="565" valign="top">
                        <table width="100%" border="0" cellpadding="5" cellspacing="0" class="content_border">
                                <tr>
                                        <td class="content_title">Spring Jade </td>
                                        <td align="right" valign="bottom" class="content_title">
                                                <table width="100" border="0" cellpadding="0" cellspacing="5" class="product_nav">
                                                        <tr>
                                                                <td align="left">&lt; Prev   </td>
                                                                <td align="right">Next &gt;</td>
                                                        </tr>
                                        </table></td>
                                </tr>
                                <!--big picture-->
                                <tr>
                                        <td height="118" colspan="2" valign="top">
                                        <%=image_tag(@product.pictures.first.public_filename(:middle)) if @product.pictures.size > 0 %></td>
                                </tr>
                                <tr>
                                        <td colspan="2" align="center" valign="top">
                                                <% for pic in @product.pictures %>
                                                    <table class="product_item" border="0" cellspacing="5" cellpadding="0">
                                                            <tr>
                                                                    <td>
                                                                            <%=link_to(image_tag(pic.public_filename(:small),:border=>0),pic.public_filename()) %>
                                                                    </td>
                                                            </tr>
                                                    </table>
                                                <% end %>
                                        </td>
                                </tr>
                                <tr>
                                        <td colspan="2" valign="top">
                                                <table width="100%" border="0" cellspacing="0" cellpadding="5">
                                                        <tr>
                                                                <td colspan="2" bgcolor="#eeeeee">
                                                                <span class="product_title"><%=h @product.name %></span></td>
                                                        </tr>
                                                        <tr>
                                                                <td width="16%" align="right"><span class="property_title">Number</span></td>
                                                                <td width="84%"><%=h @product.number %></td>
                                                        </tr>
                                                        <tr>
                                                                <td align="right"><span class="property_title">Specification</span></td>
                                                                <td><%=h @product.specification %></td>
                                                        </tr>
                                                        <tr>
                                                                <td align="right" valign="top">
                                                                <span class="property_title">Description</span></td>
                                                                <td><%=@product.description %></td>
                                                        </tr>
                                                </table>
                                                <br>
                                                <%=render_feedback_list(@product.id)  %>
                                                <br/>
                                                <%=render_new_feedback_form('product') %>
                                        </td>
                                </tr>
                        </table>
                </td>
        </tr>
</table>
