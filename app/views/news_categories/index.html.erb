<h1>Listing news_categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
  </tr>

  <% for news_category in @news_categories %>
    <tr>
      <td><%=h news_category.name %></td>
      <td><%=h news_category.parent_id %></td>
      <td><%= link_to 'Show', news_category %></td>
      <td><%= link_to 'Edit', edit_news_category_path(news_category) %></td>
      <td><%= link_to 'Destroy', news_category, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New news_category', new_news_category_path %>
