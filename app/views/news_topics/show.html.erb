<table width="570" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td height="86" bgcolor="#E1E1D6">&nbsp;&nbsp;<img src="/images/<%="en/" if session[:en] -%>newscenter_title.jpg" /></td>
  </tr>
</table>
<table width="570" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td height="28" align="center" background="../images/line.gif">
      <a href="/news_categories">所有新闻</a>
      <%=" | " if !@news_categories.blank? %>
      <% for news_category in @news_categories %>
        <%= link_to h(news_category.name), news_category %>
        <%=" | " if news_category!=@news_categories.last %>
      <%end%>
    </td>
  </tr>
</table>
<table width="510" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr>
    <td style="padding-top:10px">
      <div>
        <div align="center"><h2><%= @news_topic.title %></h2></div>
        <div><%= @news_topic.body %></div>
      </div>
    </td>
  </tr>
</table>