<table width="100%" border="0" cellspacing="0" cellpadding="5">
  <% for activity in @activities %>
    <tr>
      <td>
        <table class="product_item" width="100%" border="0" cellspacing="0" cellpadding="5">
          <tr>
            <td width="25%" valign="top">
              <%=link_to image_tag(activity.activities_pictures.first.public_filename(:small)),activity_path(activity) if activity.activities_pictures.count > 0 %>
            </td>
            <td width="75%" valign="top">
              <table width="100%" border="0" cellpadding="5" cellspacing="0" class="footer">
                <tr>
                  <td width="11%">名称:</td>
                  <td width="89%" align="left"><%= link_to h(activity.name), activity_path(activity) %></td>
                </tr>
                <tr>
                  <td valign="top">描述:</td>
                  <td align="left" valign="top"><%= activity.description %></td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  <% end %>
</table>
<table width="100%" border="0" cellspacing="5" cellpadding="5">
  <tr>
    <td align="left"><%=will_paginate @activitys %></td>
  </tr>
</table>
